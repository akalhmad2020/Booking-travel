<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.mainfragments.DestinationsDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_15sdp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_activity_name_d_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Places"
                android:textColor="@color/black"
                android:textSize="@dimen/_24ssp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/_5sdp"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="in "
                android:textColor="@color/black"
                android:textSize="@dimen/_24ssp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tv_city_name_d_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stockholm"
                android:textColor="#5B4DBC"
                android:textSize="@dimen/_24ssp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_fdd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_281sdp"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/black"
            android:text="Top Activities"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_top_activities_fdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</ScrollView>