                            <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:background="#5B4DBC"
                                />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                 android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hornborga"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/_26sdp"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >
                                <TextView
                                     android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Stockholm"
                                    android:textColor="#B7B7B7"
                                    android:textSize="@dimen/_12ssp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    />
                                <TextView
                                     android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="   Sweden"
                                    android:textColor="#B7B7B7"
                                    android:textSize="@dimen/_12ssp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="from:"
                                    android:textColor="#B7B7B7"
                                    android:textSize="@dimen/_13ssp"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    />
                                <TextView
                                     android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="09 july "
                                    android:textColor="#5B4DBC"
                                    android:textSize="@dimen/_13ssp"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="to:"
                                    android:textColor="#B7B7B7"
                                    android:textSize="@dimen/_13ssp"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    />
                                <TextView
                                     android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12 july "
                                    android:textColor="#5B4DBC"
                                    android:textSize="@dimen/_13ssp"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_140sdp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 People"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="x"
                                android:textSize="@dimen/_14ssp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFA183"
                                android:text="$350"
                                android:textSize="@dimen/_15ssp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:cardCornerRadius="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:backgroundTint="#FFF4F2"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFA183"
                            android:text="$750"
                            android:textSize="@dimen/_16ssp"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
